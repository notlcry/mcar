# ALSA配置 - 直接使用硬件设备
# 默认播放设备
pcm.!default {
    type plug
    slave {
        pcm "hw:0,0"
        rate 44100
        channels 2
        format S16_LE
    }
}

# 默认控制设备
ctl.!default {
    type hw
    card 0
}

# 录音设备 (USB麦克风)
pcm.mic {
    type plug
    slave {
        pcm "hw:1,0"
        rate 16000
        channels 1
        format S16_LE
    }
}